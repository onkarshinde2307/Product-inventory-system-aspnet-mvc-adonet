@{
    ViewBag.Title = "About";
}

<section class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-dark">About <span class="text-warning">Product Inventory System</span></h1>
        <p class="lead text-muted">
            A robust and elegant inventory management web app built with ASP.NET MVC and ADO.NET.
        </p>
    </div>

    <div class="row g-4">
        <!-- Feature Card -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100 rounded-4">
                <div class="card-body">
                    <h5 class="card-title fw-bold"><i class="fas fa-plug-circle-check text-success me-2"></i> Seamless ADO.NET Integration</h5>
                    <p class="card-text text-muted">
                        Implements clean and fast CRUD operations directly using ADO.NET and raw SQL commands.
                    </p>
                </div>
            </div>
        </div>

        <!-- Architecture -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100 rounded-4">
                <div class="card-body">
                    <h5 class="card-title fw-bold"><i class="fas fa-layer-group text-primary me-2"></i> Multi-Layered Architecture</h5>
                    <p class="card-text text-muted">
                        Follows a separation of concerns via Controller, Model, Repository layers for maintainability.
                    </p>
                </div>
            </div>
        </div>

        <!-- UI/UX -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100 rounded-4">
                <div class="card-body">
                    <h5 class="card-title fw-bold"><i class="fas fa-laptop-code text-info me-2"></i> Modern UI with Bootstrap 5</h5>
                    <p class="card-text text-muted">
                        Built using Bootstrap 5.3 for fully responsive design across all screen sizes.
                    </p>
                </div>
            </div>
        </div>

        <!-- Portfolio Ready -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100 rounded-4">
                <div class="card-body">
                    <h5 class="card-title fw-bold"><i class="fas fa-code-branch text-danger me-2"></i> GitHub Portfolio-Ready</h5>
                    <p class="card-text text-muted">
                        Designed as a strong portfolio project showcasing real-world database and MVC skills.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a href="@Url.Action("Contact", "Home")" class="btn btn-dark rounded-pill px-4 py-2">
            <i class="fas fa-envelope me-2"></i> Contact the Developer
        </a>
    </div>
</section>
