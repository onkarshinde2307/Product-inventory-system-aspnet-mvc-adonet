@model ProductInventory_ADO.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4>Confirm Delete</h4>
        </div>
        <div class="card-body">
            <p class="fw-bold text-danger">Are you sure you want to delete this product?</p>

            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.ProductId" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary ms-2" })
            }
        </div>
    </div>
</div>
